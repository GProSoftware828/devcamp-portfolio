<% form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messges.each do |error| %>
      <%= js add_gritter(error, title: "George Payne portfolio", sticky: false, time: 3000) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 15, placeholder: 'Content' %>
  </div>

  <div class="form-group">
    <%= f.submit "submit", class: 'btn btn-primary' %>
  </div>
<% end %>