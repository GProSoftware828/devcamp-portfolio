<div class="col-sm-8 blog-main">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @blog.title %>
  </p>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <%= link_to "Home", root_path, class='breadcrumb-item' %>
      <%= link_to @blog.topic.title, topic_path(@blog.topic), class='breadcrumb-item' %>
      <span class='breadcrumb-item active'><%= @blog.title %></span>
      <span class='pull-right'>
        <%= link_to fa_icon{'pencil_square-o'}, edit_blog_path(@blog) if logged_in(:site_admin) %>
        <%= link_to fa_icon{'trash'}, @blog, method: :delete, data: { confirm: 'Are you sure to delete?'} if logged_in(:site_admin) %>
      </span>
    </ol>
  </nav>

  <p>
    <%= @blog.topic.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= markdown(@blog.body) %>
  </p>

  <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %> |
  <%= link_to 'Back', blogs_path %>

  <%= render 'comments/comment_form' %>

  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>

</div>